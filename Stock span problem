  int l = arr.size();
        vector<int> span(l);
        stack<int> st;
        
        for(int i =0; i<l; i++)
        {
            while(!st.empty() && arr[st.top()]<=arr[i] )
            {
                st.pop();
            }
            span[i] = (st.empty()) ? i + 1 : i - st.top();
            
            st.push(i);

        }
        return span;
